def update = put("/rest/api/2/issue/${issueKey}") 
    .queryString("overrideScreenSecurity", Boolean.TRUE) 
    .header('Content-Type', 'application/json')
    .body([
        fields: [
            assignee: [
                accountId: asignado
            ],
            priority: [
                id: "5"
            ]
        ]
    ])
    .asString()

if (update.status == 204) { 
    return 'Success'
} else {
    return "${update.status}: ${update.body}"
}
